# Discord Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Discord Bot Configuration
DISCORD_TOKEN=DISCORD_TOKEN_PLACEHOLDER
CLIENT_ID=CLIENT_ID_PLACEHOLDER
#GUILD_ID=your_test_guild_id_here_optional

# Bot Behavior Settings
AUTO_DEPLOY_COMMANDS=true  # Set to false to disable automatic command deployment on startup

# Module Configuration
# Enable/disable specific command modules (set to false to disable)
ENABLE_AI_MODULE=true
ENABLE_INVITELEADERBOARDS_MODULE=true
ENABLE_INFORMATION_MODULE=true
ENABLE_MUSIC_MODULE=true
ENABLE_UTILS_MODULE=true
ENABLE_TEMPLATES_MODULE=true
ENABLE_SELFROLE_MODULE=true
ENABLE_AUTOROLE_MODULE=true
ENABLE_TEMPVC_MODULE=true
ENABLE_TICKETS_MODULE=true
ENABLE_GENERAL_MODULE=true
ENABLE_MODERATION_MODULE=true
ENABLE_LFG_MODULE=true
ENABLE_REMINDERS_MODULE=true

# Alternative: Use comma-separated list to override all enabled modules
# ENABLED_MODULES=ai,information,music,reminders

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/discord-music-bot
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/discord-music-bot

# Lavalink Configuration
LAVALINK_HOST=localhost
LAVALINK_PORT=2333
LAVALINK_PASSWORD=your_lavalink_password_here

# YouTube Plugin Configuration (Optional)
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Bot Configuration
BOT_PREFIX=!
DEFAULT_VOLUME=50
MAX_QUEUE_SIZE=100
PREMIUM_MAX_QUEUE_SIZE=500
COMMAND_COOLDOWN=3000
PREMIUM_COMMAND_COOLDOWN=1000

# Development
NODE_ENV=production

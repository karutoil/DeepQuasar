# Discord Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Discord Bot Configuration
DISCORD_TOKEN=DISCORD_TOKEN_PLACEHOLDER
CLIENT_ID=CLIENT_ID_PLACEHOLDER
GUILD_ID=your_test_guild_id_here_optional

# Bot Behavior Settings
AUTO_DEPLOY_COMMANDS=true  # Set to false to disable automatic command deployment on startup

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/discord-music-bot
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/discord-music-bot

# Lavalink Configuration
LAVALINK_HOST=localhost
LAVALINK_PORT=2333
LAVALINK_PASSWORD=your_lavalink_password_here

# YouTube Plugin Configuration (Optional)
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here

# Spotify Configuration (Optional)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Web Dashboard Configuration (Optional)
WEB_PORT=3000
WEB_SECRET=your_web_dashboard_secret_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Bot Configuration
BOT_PREFIX=!
DEFAULT_VOLUME=50
MAX_QUEUE_SIZE=100
PREMIUM_MAX_QUEUE_SIZE=500
COMMAND_COOLDOWN=3000
PREMIUM_COMMAND_COOLDOWN=1000

# Development
NODE_ENV=production
